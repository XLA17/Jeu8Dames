<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Message indiquant la victoire ou la défaite -->
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vous avez perdu !"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <!-- Bouton pour redémarrer le jeu -->
    <ImageView
        android:id="@+id/restartButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/restart_game_button"
        android:layout_below="@id/message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <!-- Bouton pour quitter le jeu -->
    <ImageView
        android:id="@+id/quitButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/quit_game_button"
        android:layout_below="@id/restartButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
